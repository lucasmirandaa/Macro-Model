@model IEnumerable<Macro_Model.Models.Cadastro>

@{
    ViewData["Title"] = "Usuario";
}

<h1>Usuario</h1>

<p>
    <a asp-action="Cadastro" class="btn btn-success">Criar um novo usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Cpf">Editar</a> |
                <a class="btn btn-primary" asp-action="Detalhe" asp-route-id="@item.Cpf">Visualizar</a> |
                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Cpf">Excluir perfil</a>
            </td>
        </tr>
}
    </tbody>
</table>
