@model Macro_Model.Models.Produto
@{
	ViewData["Title"] = "Produto";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Produto">
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Restricao" class="control-label"></label>
				<input asp-for="Restricao" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Nutricional" class="control-label"></label>
				<input asp-for="Nutricional" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="form-control" />
			</div>
			</br>
			<button id="cadastro" , type="submit" class="btn btn-success">Insira uma imagem do produto(jpeg ou png)</button>
			</br>
			</br>
			<div class="form-group">
				<input type="submit" value="Adicionar na lista" class="btn btn-primary" />
			</div>
		</form>

	</div>

</div>